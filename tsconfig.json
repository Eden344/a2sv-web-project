{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",  // Use "ESNext" for better compatibility
    "moduleResolution": "node",  // Change to "node" for better compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",  // Keep this for JSX handling
    "incremental": true,
    "types": ["jest"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
      // Make sure Jest types are included
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.d.ts",
    "**/*.test.ts",  // Ensure this line is included
    ".next/types/**/*.ts",
    "**/*.test.tsx",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules"]
}